<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/theomen"
    tools:context="com.example.thanyani.reportcard.StudentDetails">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/log"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="EWC Progress Report"
        android:textSize="28dp"
        android:textStyle="italic"
        android:textColor="#ff3333"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="add"
        android:textStyle="bold"
        android:background="#FFCC99"
        android:onClick="addOnDB"
        android:layout_below="@+id/mark3"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="update"
        android:textStyle="bold"
        android:background="#FFCC99"
        android:onClick="update"
        android:layout_below="@+id/mark3"
        android:layout_alignRight="@+id/textView3"
        android:layout_alignEnd="@+id/textView3" />

    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="delete"
        android:textStyle="bold"
        android:onClick="delete"
        android:background="#FFCC99"
        android:layout_below="@+id/mark3"
        android:layout_alignRight="@+id/mark3"
        android:layout_alignEnd="@+id/mark3" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Student No:"
        android:background="@drawable/theomen"
        android:layout_below="@+id/imageView"
        android:layout_marginTop="18dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/theomen"
        android:text="Name:"
        android:layout_above="@+id/gender"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/textView2"
        android:layout_alignEnd="@+id/textView2" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/theomen"
        android:textSize="15dp"
        android:text="Results"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_marginTop="14dp"
        android:layout_below="@+id/gender"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/button3"
        android:layout_toStartOf="@+id/button3" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Mathematics:"
        android:background="@drawable/theomen"
        android:layout_below="@+id/textView4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/theomen"
        android:text="Physical Sciences:"
        android:layout_above="@+id/mark3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Geography:"
        android:background="@drawable/theomen"
        android:layout_above="@+id/button2"
        android:layout_alignRight="@+id/button2"
        android:layout_alignEnd="@+id/button2" />

    <EditText
        android:id="@+id/no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text=""
        android:background="@drawable/theomen"
        android:hint="StudentNo"
        android:layout_alignBaseline="@+id/textView2"
        android:layout_alignBottom="@+id/textView2"
        android:layout_alignRight="@+id/button3"
        android:layout_alignEnd="@+id/button3" />

    <EditText
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/no"
        android:layout_alignStart="@+id/no"
        android:layout_below="@+id/no"
        android:ems="10"
        android:background="@drawable/theomen"
        android:hint="Name"
        android:inputType="textPersonName"
        android:text="" />

    <EditText
        android:id="@+id/mark1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:background="@drawable/theomen"
        android:inputType="textPersonName"
        android:text=""
        android:hint="Mark1"
        android:layout_alignBottom="@+id/textView5"
        android:layout_alignLeft="@+id/mark3"
        android:layout_alignStart="@+id/mark3" />

    <EditText
        android:id="@+id/mark2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text=""
        android:background="@drawable/theomen"
        android:hint="Mark2"
        android:layout_below="@+id/mark1"
        android:layout_alignLeft="@+id/mark1"
        android:layout_alignStart="@+id/mark1" />

    <EditText
        android:id="@+id/mark3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:background="@drawable/theomen"
        android:hint="Mark3"
        android:inputType="textPersonName"
        android:text=""
        android:layout_below="@+id/mark2"
        android:layout_alignLeft="@+id/button"
        android:layout_alignStart="@+id/button" />

    <Spinner
        android:id="@+id/gender"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name"
        android:background="@drawable/theomen"
        android:entries="@array/thanyi"
        android:layout_marginTop="19dp"
        android:layout_alignRight="@+id/name"
        android:layout_alignEnd="@+id/name"
        android:layout_alignLeft="@+id/textView4"
        android:layout_alignStart="@+id/textView4" />
</RelativeLayout>
</ScrollView>
